# Backend API Configuration
# 실제 백엔드 API 주소 (ArgoCD/Airflow 연동)
BACKEND_API_URL=http://localhost:8080
# ArgoCD 프로젝트 필터링 스코프
ARGOCD_PROJECT_NAME=airflow-pools

# SSL/TLS Configuration (Internal Network)
# 자습서/사설 인증서 사용 시 SSL 검증 비활성화 (0: 비활성화, 1: 활성화)
NODE_TLS_REJECT_UNAUTHORIZED=0
# 신뢰할 수 있는 사설 Root CA 인증서 경로
# NODE_EXTRA_CA_CERTS=/path/to/your/ca-certs.pem

# Next.js Telemetry Disable (Closed Network)
# 폐쇄망 빌드 시 외부 통계 전송 시도로 인한 지연 방지
NEXT_TELEMETRY_DISABLED=1

# External Links (Dashboard)
# 대시보드 내에서 연결되는 외부 시스템 주소 (Runtime Configurable)
ARGOCD_BASE_URL=https://argocd.example.com
GITHUB_BASE_URL=https://github.com
GRAFANA_BASE_URL=https://grafana.example.com

# Authentication Toggle
# 인증 활성화 여부 (true: 인증 필요 / false: 개발 모드, 누구나 접근 가능)
AUTH_ENABLED=false

# NextAuth Configuration (Required if AUTH_ENABLED=true)
# NextAuth 기본 설정
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change_me_to_a_secure_random_string

# Keycloak Provider Settings
# Keycloak 연동 설정
KEYCLOAK_ID=meow-meow-client
KEYCLOAK_SECRET=your_keycloak_client_secret
KEYCLOAK_ISSUER=https://sso.example.com/realms/your-realm